{
  "name": "ipfs-unixfs",
  "version": "3.0.1",
  "description": "JavaScript implementation of IPFS' unixfs (a Unix FileSystem representation on top of a MerkleDAG)",
  "leadMaintainer": "Alex Potsides <alex.potsides@protocol.ai>",
  "main": "src/index.js",
  "browser": {
    "fs": false
  },
  "scripts": {
    "prepare": "run-s prepare:*",
    "prepare:proto": "pbjs -t static-module -w commonjs --force-number --no-verify --no-delimited --no-create --no-beautify --no-defaults --lint eslint-disable -o src/unixfs.js ./src/unixfs.proto",
    "prepare:proto-types": "pbts -o src/unixfs.d.ts src/unixfs.js",
    "prepare:backup-ts-config": "mv tsconfig.json tsconfig.json.backup",
    "prepare:write-config": "node -e \"console.info(require('fs').readFileSync('./tsconfig.json.backup', 'utf8'), JSON.stringify({ extends: require('path').relative(__dirname, require.resolve('aegir/src/config/tsconfig.aegir.json')) }))\" | npx json --merge > tsconfig.json",
    "prepare:types": "aegir build --no-bundle",
    "test": "aegir test",
    "build": "aegir build",
    "clean": "rimraf ./dist",
    "lint": "aegir ts --check && aegir lint",
    "coverage": "nyc -s aegir test -t node && nyc report --reporter=html",
    "depcheck": "aegir dep-check -i mkdirp -i @types/mocha -i nyc -i npm-run-all -i copy -i util"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs/js-ipfs-unixfs.git"
  },
  "keywords": [
    "IPFS"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ipfs/js-ipfs-unixfs/issues"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=4.0.0"
  },
  "homepage": "https://github.com/ipfs/js-ipfs-unixfs#readme",
  "devDependencies": {
    "@types/mocha": "^8.2.1",
    "aegir": "^32.0.0",
    "copy": "^0.3.2",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "uint8arrays": "^2.1.2",
    "util": "^0.12.3"
  },
  "dependencies": {
    "err-code": "^3.0.1",
    "protobufjs": "^6.10.2"
  },
  "types": "dist/src/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "eslintConfig": {
    "extends": "ipfs"
  }
}
